{
  "name": "voicemeeter",
  "version": "2.2.0",
  "type": "commonjs",
  "main": "dist/index.js",
  "scripts": {
    "dev": "yarn build:watch",
    "build": "rimraf dist && yarn build:main",
    "build:main": "tsc -p tsconfig.build.json",
    "build:watch": "tsc -p tsconfig.build.json --watch",
    "build:test": "tsc -p tsconfig.build.json --noEmit",
    "lint": "eslint --fix",
    "lint:test": "eslint",
    "test": "jest"
  },
  "lint-staged": {
    "*.{js,json,md}": [
      "prettier --write",
      "git add"
    ],
    "*.{ts}": [
      "yarn lint --fix --",
      "git add"
    ]
  },
  "eslintIgnore": [
    "/tests/*.test.ts"
  ],
  "license": "MIT",
  "engines": {
    "node": "^22.18"
  },
  "dependencies": {
    "@companion-module/base": "~1.13.2",
    "companion-module-utils": "^0.2.0"
  },
  "devDependencies": {
    "@companion-module/tools": "~2.4.0",
    "@types/jest": "30.0.0",
    "@types/node": "24.3.1",
    "@typescript-eslint/eslint-plugin": "^8.43.0",
    "@typescript-eslint/parser": "^8.43.0",
    "eslint": "9.35.0",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-prettier": "5.5.4",
    "globals": "16.3.0",
    "husky": "9.1.7",
    "jest": "^30.1.3",
    "lint-staged": "16.1.6",
    "prettier": "3.6.2",
    "rimraf": "6.0.1",
    "ts-jest": "29.4.1",
    "typescript": "5.9.2",
    "typescript-eslint": "^8.43.0"
  }
}
